---
const brands = {
  'A-D': [
    'Amana',
    'Bertazzoni',
    'Blomberg',
    'Bosch',
    'Cyclone',
    'Dacor',
    'Danby',
    'DCS Appliances'
  ],
  'E-H': [
    'Electrolux',
    'Falmec',
    'Forno',
    'Fisher & Paykel',
    'Frigidaire',
    'Fulgor Milano',
    'GE',
    'Huebsch'
  ],
  'I-M': [
    'Jenn-Air',
    'Kenmore',
    'KitchenAid',
    'LG',
    'Liebherr',
    'Maytag',
    'Midea',
    'Miele'
  ],
  'N-T': [
    'Panasonic',
    'Premier',
    'Samsung',
    'Signature Kitchen',
    'Sirius',
    'Speed Queen',
    'Sub-Zero',
    'Thermador'
  ],
  'U-Z': [
    'Thor Kitchen',
    'True',
    'Viking',
    'Vent-A-Hood',
    'Whirlpool',
    'Wolf',
    'Zephyr'
  ]
};
---

<div class="mega-menu">
  <div class="mega-menu-content max-w-7xl mx-auto grid grid-cols-5 gap-8 p-8">
    {Object.entries(brands).map(([group, brandList]) => (
      <div class="brand-group">
        <h3 class="text-accent-light font-semibold mb-4">{group}</h3>
        <ul class="space-y-2">
          {brandList.map(brand => (
            <li>
              <a href={`/brands/${brand.toLowerCase().replace(/\s+/g, '-')}`} 
                 class="text-white hover:text-accent-light transition-colors">
                {brand}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</div>

<style>
  .mega-menu {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: rgb(var(--accent-dark));
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  :global(.brands-menu:hover .mega-menu) {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
</style>